{
  "name": "linter-ui-default",
  "main": "./lib/index.js",
  "version": "0.0.3",
  "description": "-- Work in Progress -- Default UI for `linter` package",
  "keywords": [],
  "repository": "https://github.com/steelbrain/linter-ui-default",
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "scripts": {
    "test": "apm test",
    "lint": "eslint .",
    "clean": "rm -rf lib",
    "compile": "npm run clean && babel src --out-dir lib",
    "watch": "npm run clean && babel src --out-dir lib --watch"
  },
  "dependencies": {
    "atom-package-deps": "^4.1.0",
    "disposable-event": "^1.0.1",
    "lodash.filter": "^4.2.1",
    "preact": "^5.3.1",
    "sb-debounce": "^1.0.1",
    "sb-event-kit": "^2.0.0"
  },
  "devDependencies": {
    "eslint-config-steelbrain": "^1.0.4",
    "jasmine-fix": "^1.0.0",
    "babel-cli": "^6.10.1",
    "babel-plugin-for-of-efficient": "^1.0.0",
    "babel-preset-steelbrain": "^4.0.1"
  },
  "providedServices": {
    "linter-ui": {
      "versions": {
        "1.0.0": "provideUI"
      }
    },
    "intentions:list": {
      "versions": {
        "1.0.0": "provideIntentions"
      }
    }
  },
  "consumedServices": {
    "busy-signal": {
      "versions": {
        "1.0.0": "consumeSignal"
      }
    }
  },
  "package-deps": [
    "busy-signal",
    "intentions"
  ],
  "configSchema": {
    "showPanel": {
      "type": "boolean",
      "description": "Show panel at the bottom of screen",
      "default": false,
      "order": 1
    },
    "showBubble": {
      "description": "Show inline issue bubbles",
      "type": "boolean",
      "default": true,
      "order": 1
    },
    "showDecorations": {
      "description": "Underline editor text and highlight gutter of issues",
      "type": "boolean",
      "default": true,
      "order": 1
    },
    "showProviderName": {
      "type": "boolean",
      "description": "Show provider name in messages",
      "default": false,
      "order": 1
    },
    "decorateOnTreeView": {
      "type": "string",
      "default": "Files",
      "enum": [
        "Files and Directories",
        "Files",
        "None"
      ],
      "order": 2
    },
    "showIssuesFrom": {
      "title": "Show issues in Panel From",
      "type": "string",
      "enum": [
        "All Files",
        "Current File",
        "Current Line"
      ],
      "default": "Current File",
      "order": 2
    },
    "tooltipFollows": {
      "type": "string",
      "enum": [
        "Mouse",
        "Keyboard"
      ],
      "default": "Mouse",
      "order": 2
    },
    "gutterPosition": {
      "title": "Position of Gutter Highlights",
      "description": "Relative to line number gutter",
      "type": "string",
      "enum": [
        "Left",
        "Right"
      ],
      "default": "Right",
      "order": 2
    },
    "messageTypesToIgnoreInPanel": {
      "description": "Comma separated list of message types to *only* show in editor, and not in panel",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "order": 3
    }
  }
}
